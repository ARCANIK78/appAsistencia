<Window x:Class="appAsistencia.ToastMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToastMessage"
        Width="372" Height="144"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="Manual">

    <Border Background="White" CornerRadius="12" Padding="20" Margin="10" BorderBrush="#FF555555" BorderThickness="1">
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="txtMensaje" Text="Mensaje aquí" 
                       Foreground="Black" FontSize="16" 
                       TextWrapping="Wrap" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
